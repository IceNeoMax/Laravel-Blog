                        <td><?php echo $post["commentCount"]; ?></td>
                        <td><?php if(isset($post->updated_at)): ?>
                          <?php echo $post->updated_time; ?>

                        <?php endif; ?></td>
                    </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
