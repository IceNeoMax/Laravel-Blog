        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                  	<tr>
                        <th><input type="checkbox"></th>
                        <th>Tiêu đề</th>
                        <th>Loại</th>
                        <th>Người đăng</th>
                        <!-- <th>Like</th>-->
                        <th>Comment</th>
                        <!-- <th>Lượt xem</th>-->
                        <th>Ngày đăng</th>

                    </tr>
                </thead>
                <tbody>
                    <?php foreach($posts as $post): ?>
                    <tr id="tr<?php echo $post['_id']; ?>">
                        <td><input type="checkbox"></td>
                        <td>
                        	<p><?php echo $post->title; ?></p>
                        	<ul class="list-inline">
                    			<li><a target="_blank" href='<?php echo URL::to('post/update/'.$post['_id']); ?>'>Chỉnh sửa</a></li>
                    			<li><a target="_blank" href='<?php echo URL::to('post/'.$post['_id']); ?>'>Xem</a></li>
                    			<li><a target="_blank" href=''>Chia sẻ</a></li>
                    			<li><a id="delete" href='' onclick="Event.preventDefault();deletePost('<?php echo $post['_id']; ?>')">Xóa</a></li>
                			</ul>
                        </td>
                        <?php if($post["type"]=="Draft"): ?>
                        <td>Bản nháp</td>
                        <?php else: ?>
                        <td>Bản chính</td>
                        <?php endif; ?>
