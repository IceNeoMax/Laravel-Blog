<script>
    function deletePost(id)
    {
        $.ajax(
        {
            url:"<?php echo URL::to('post/delete/'); ?>/id",
            type:"GET",
            success: function(data)
            {
                if(data.success==1)
                {
                    var name = "tr"+id;
                    $(name).remove();
                }
            }
        });
    }
</script>
